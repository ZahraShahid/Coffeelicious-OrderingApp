<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coffeelicious">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Coffeelicious"
        android:fullBackupContent="true">
        <activity
            android:name=".SummaryActivity"
            android:label="@string/title_activity_summary"
            android:theme="@style/Theme.Coffeelicious.NoActionBar" />
        <activity android:name=".InfoActivity" />
        <activity android:name=".LatteActivity" />
        <activity android:name=".SmoothieActivity" />
        <activity android:name=".VanillaActivity" />
        <activity android:name=".CappucinoActivity" />
        <activity android:name=".ThaiActivity" />
        <activity android:name=".TeaActivity" />
        <activity android:name=".BubbleActivity" />
        <activity android:name=".MatchaActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".Database.OrderProvider"
            android:authorities="com.example.coffeelicious"
            android:exported="true" />

    </application>

</manifest>